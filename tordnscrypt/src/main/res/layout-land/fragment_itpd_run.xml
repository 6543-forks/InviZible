<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_border"
    android:orientation="vertical"
    tools:context=".ITPDRunFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnITPDStart"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/run_btns_margin"
            android:layout_weight="1"
            android:enabled="false"
            android:singleLine="true"
            android:text="@string/btnITPDStart"
            android:textSize="@dimen/start_btns_text_size" />

        <TextView
            android:id="@+id/tvI2PDStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/btnITPDStop"
            android:textAlignment="center"
            android:textSize="@dimen/status_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pbITPD"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvITPDLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="@string/tvITPDDefaultLog"
            android:textSize="@dimen/fragment_log_text_size" />

        <TextView
            android:id="@+id/tvITPDCurrEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/pref_itpd_current_events"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvITPDinfoLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:scrollbars="vertical"
            android:textSize="@dimen/fragment_log_text_size" />
    </LinearLayout>

</LinearLayout>